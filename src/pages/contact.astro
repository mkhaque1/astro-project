---
import ContactForm from "../components/ContactForm.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Pyonet | Contact Us">
  <main class="contact">
    <section class="hero-contact">
      <div class="hero-content">
        <h1 class="hero-title">Get in Touch</h1>
        <p class="hero-subtitle">
          Letâ€™s transform your ideas into reality with expert guidance.
        </p>
        <a href="#contact-form" class="cta-button">Free Consultation</a>
      </div>
    </section>
    <section id="contact-form" class="form-section">
      <ContactForm />
    </section>
  </main>
</Layout>

<style lang="scss">
  .contact {
    padding-top: 80px;
    color: #e2e8f0;
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  .hero-contact {
    height: 40vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #2d3748, #4a5568);
    position: relative;
    overflow: hidden;
    padding: 2rem;
    text-align: center;
    border-radius: var(--border-radius);
  }

  .hero-content {
    z-index: 10;
    animation: fadeIn 1s ease-out;
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 800;
    margin-bottom: 1rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.5rem);
    max-width: 600px;
    margin: 0 auto 2rem;
    line-height: 1.6;
    color: #a0aec0;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: #fff;
    color: #2d3748;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 700;
    border: 2px solid transparent;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.2);

    &:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 20px rgba(255, 255, 255, 0.3);
      background: #f7fafc;
    }

    &:before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      transition:
        width 0.6s ease,
        height 0.6s ease;
    }

    &:hover:before {
      width: 200px;
      height: 200px;
    }
  }

  .form-section {
    padding: 4rem 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .contact {
      padding-top: 50px;
    }

    .hero-contact {
      height: 50vh;
    }

    .hero-title {
      font-size: clamp(2rem, 6vw, 3.5rem);
    }

    .hero-subtitle {
      font-size: clamp(1rem, 2vw, 1.2rem);
    }

    .form-section {
      padding: 2rem 1rem;
    }
  }
</style>
