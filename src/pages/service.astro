---
import Layout from "../layouts/Layout.astro";
import ProcessFlow from "../components/ProcessFlow.astro";
import { Icon } from "astro-icon/components";

const services = [
  {
    title: "Web Development",
    description:
      "Custom web solutions tailored to your business needs with modern technologies and responsive design.",
    icon: "heroicons:code-bracket-solid",
  },
  {
    title: "Mobile App Development",
    description:
      "Native and cross-platform mobile applications for iOS and Android platforms.",
    icon: "heroicons:device-phone-mobile-solid",
  },
  {
    title: "UI/UX Design",
    description:
      "Beautiful and intuitive user interfaces that enhance user experience and engagement.",
    icon: "heroicons:paint-brush-solid",
  },
  {
    title: "Digital Marketing",
    description:
      "Comprehensive digital marketing strategies to grow your online presence.",
    icon: "heroicons:chart-bar-solid",
  },
  {
    title: "SEO Optimization",
    description:
      "Improve your search engine rankings and drive organic traffic to your website.",
    icon: "heroicons:magnifying-glass-solid",
  },
  {
    title: "Content Creation",
    description:
      "High-quality content that resonates with your audience and boosts conversions.",
    icon: "heroicons:pencil-solid",
  },
  {
    title: "Branding",
    description:
      "Create a strong brand identity that stands out in the competitive market.",
    icon: "heroicons:sparkles-solid",
  },
  {
    title: "Consulting",
    description:
      "Expert advice to help you make informed decisions about your digital strategy.",
    icon: "heroicons:chat-bubble-left-right-solid",
  },
  {
    title: "Support & Maintenance",
    description:
      "Ongoing support and maintenance to keep your digital products running smoothly.",
    icon: "heroicons:cog-solid",
  },
  {
    title: "eCommerce Solutions",
    description:
      "Powerful online stores with seamless checkout and payment integrations.",
    icon: "heroicons:shopping-cart-solid",
  },
  {
    title: "SaaS Development",
    description:
      "Scalable software-as-a-service solutions for your business needs.",
    icon: "heroicons:server-solid",
  },
  {
    title: "Cloud Architecture",
    description:
      "Design and deploy robust, scalable cloud infrastructure on AWS, Azure, or GCP.",
    icon: "heroicons:cloud-solid",
  },
];
---

<Layout title="Pyonet Services | Modern Digital Solutions">
  <main class="services-page">
    <div class="blur-bg blur-1"></div>
    <div class="blur-bg blur-2"></div>
    <div class="blur-bg blur-3"></div>

    <section class="services-hero">
      <div class="hero-content glass-card">
        <h1 class="hero-title">Our Services</h1>
        <p class="hero-subtitle">
          From concept to code, we build cutting-edge digital experiences that
          elevate your brand and drive results.
        </p>
        <a href="/contact" class="cta-button">Start Your Project</a>
      </div>
    </section>

    <section class="services-bento">
      <div class="bento-grid">
        <div class="bento-card medium yellow" style="grid-area: 1 / 1 / 2 / 3;">
          <h3>Web Development</h3>
          <p>
            Custom web solutions tailored to your business needs with modern
            technologies and responsive design.
          </p>
          <Icon name="heroicons:code-bracket-solid" />
        </div>
        <div class="bento-card medium yellow" style="grid-area: 1 / 3 / 2 / 4;">
          <h3>Mobile App Development</h3>
          <p>
            Native and cross-platform mobile applications for iOS and Android
            platforms.
          </p>
          <Icon name="heroicons:device-phone-mobile-solid" />
        </div>
        <div class="bento-card medium white" style="grid-area: 2 / 1 / 3 / 2;">
          <h3>UI/UX Design</h3>
          <p>
            Beautiful and intuitive user interfaces that enhance user experience
            and engagement.
          </p>
          <Icon name="heroicons:paint-brush-solid" />
        </div>
        <div class="bento-card medium yellow" style="grid-area: 2 / 2 / 3 / 3;">
          <h3>Digital Marketing</h3>
          <p>
            Comprehensive digital marketing strategies to grow your online
            presence.
          </p>
          <Icon name="heroicons:chart-bar-solid" />
        </div>
        <div class="bento-card small purple" style="grid-area: 2 / 3 / 3 / 4;">
          <h4>SEO Optimization</h4>
          <p>Improve your search engine rankings and drive organic traffic.</p>
          <Icon name="heroicons:magnifying-glass-solid" />
        </div>
        <div class="bento-card small purple" style="grid-area: 3 / 1 / 4 / 2;">
          <h4>Content Creation</h4>
          <p>
            High-quality content that resonates with your audience and boosts
            conversions.
          </p>
          <Icon name="heroicons:pencil-solid" />
        </div>
        <div class="bento-card medium white" style="grid-area: 3 / 2 / 4 / 3;">
          <h3>Branding</h3>
          <p>
            Create a strong brand identity that stands out in the competitive
            market.
          </p>
          <Icon name="heroicons:sparkles-solid" />
        </div>
        <div class="bento-card medium white" style="grid-area: 3 / 3 / 4 / 5;">
          <h3>Consulting</h3>
          <p>
            Expert advice to help you make informed decisions about your digital
            strategy.
          </p>
          <Icon name="heroicons:chat-bubble-left-right-solid" />
        </div>
        <div class="bento-card medium yellow" style="grid-area: 4 / 1 / 5 / 2;">
          <h3>Support & Maintenance</h3>
          <p>
            Ongoing support and maintenance to keep your digital products
            running smoothly.
          </p>
          <Icon name="heroicons:cog-solid" />
        </div>
        <div class="bento-card medium yellow" style="grid-area: 4 / 2 / 5 / 4;">
          <h3>eCommerce Solutions</h3>
          <p>
            Powerful online stores with seamless checkout and payment
            integrations.
          </p>
          <Icon name="heroicons:shopping-cart-solid" />
        </div>
        <div class="bento-card medium white" style="grid-area: 4 / 4 / 5 / 4;">
          <h3>SaaS Development</h3>
          <p>
            Scalable software-as-a-service solutions for your business needs.
          </p>
          <Icon name="heroicons:server-solid" />
        </div>
        <div class="bento-card large purple" style="grid-area: 1 / 4 / 3 / 5;">
          <h2>Our Comprehensive Services</h2>
          <p>Explore our full range of digital solutions.</p>
        </div>
        <div class="bento-card large purple" style="grid-area: 3 / 1 / 5 / 2;">
          <h2>Technical Excellence</h2>
          <p>Advanced solutions for your business needs.</p>
        </div>
      </div>
    </section>

    <section class="process-section">
      <ProcessFlow />
    </section>

    <section class="final-cta">
      <div class="cta-content glass-card">
        <h2 class="cta-title">Have an idea?</h2>
        <p class="cta-subtitle">
          Let's turn it into reality. Get in touch with our experts today for a
          free consultation.
        </p>
        <a href="/contact" class="cta-button">Get a Free Quote</a>
      </div>
    </section>
  </main>
</Layout>

<style lang="scss">
  // --- Reusable CTA Button ---
  .cta-button {
    display: inline-block;
    padding: 0.8rem 2rem;
    background: linear-gradient(135deg, var(--brand-purple), var(--brand-red));
    color: var(--text-primary);
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    border: none;
    cursor: pointer;

    &:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25);
    }
  }

  // --- Base Page Layout ---
  .services-page {
    padding: 4rem 2rem;
    color: var(--text-primary);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    gap: 5rem;
    position: relative;
    overflow: hidden;
  }

  // --- Decorative Blurs ---
  .blur-bg {
    position: absolute;
    width: 300px;
    height: 300px;
    filter: blur(200px);
    opacity: 0.7;
    z-index: 1;

    &.blur-1 {
      top: 5%;
      right: 5%;
      background-color: var(--brand-pink);
    }
    &.blur-2 {
      top: 30%;
      left: 0;
      background-color: var(--brand-blue);
    }
    &.blur-3 {
      bottom: 5%;
      right: 20%;
      background-color: var(--brand-purple);
    }
  }

  // --- Hero Section ---
  .services-hero {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 3rem 0;

    .hero-content {
      padding: 3rem 2.5rem;
      max-width: 800px;
    }

    .hero-title {
      font-size: clamp(2.5rem, 6vw, 4rem);
      font-weight: 800;
      margin-bottom: 1rem;
    }

    .hero-subtitle {
      font-size: clamp(1.1rem, 2vw, 1.25rem);
      color: var(--text-secondary);
      max-width: 600px;
      margin: 0 auto 2.5rem auto;
      line-height: 1.6;
    }
  }

  // --- Bento Grid Layout ---
  .services-bento {
    padding: 2rem 0;
    z-index: 10;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(5, auto);
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .bento-card {
    padding: 1.5rem;
    border-radius: var(--border-radius);
    color: var(--text-primary);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;

    &:hover {
      transform: translateY(-5px);
      box-shadow: 0 4px 1px var(--brand-blue);
    }

    &.large {
      grid-column: span 1;
      grid-row: span 1;
      padding: 2.5rem;
    }

    &.medium {
      grid-column: span 1;
      grid-row: span 1;
      padding: 1.5rem;
    }

    &.small {
      grid-column: span 1;
      grid-row: span 1;
      padding: 1rem;
    }

    &.purple {
      background: var(--brand-purple);
    }

    &.yellow {
      background: #fff;
      color: #2d3748;
    }

    &.white {
      background: rgba(88, 88, 88, 0.252);
    }

    h2 {
      font-size: 1.75rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    h3 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    h4 {
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    p {
      font-size: 0.9rem;
      line-height: 1.4;
    }

    :global(svg) {
      width: 24px;
      height: 24px;
      margin-top: 0.5rem;
    }
  }

  // --- Process Section ---
  .process-section {
    z-index: 10;
  }

  // --- Final CTA Section ---
  .final-cta {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 3rem 0;

    .cta-content {
      padding: 3rem 2.5rem;
      max-width: 800px;
    }

    .cta-title {
      font-size: clamp(2rem, 5vw, 2.75rem);
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .cta-subtitle {
      font-size: 1.15rem;
      color: var(--text-secondary);
      max-width: 550px;
      margin: 0 auto 2.5rem auto;
      line-height: 1.6;
    }
  }

  // --- Responsive Design ---
  @media (max-width: 768px) {
    .services-page {
      padding: 3rem 1rem;
      gap: 3rem;
    }

    .services-hero,
    .final-cta {
      padding: 1rem 0;
      .hero-content,
      .cta-content {
        padding: 2rem 1.5rem;
      }
    }

    .bento-grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      gap: 1rem;
    }

    .bento-card.large {
      grid-column: span 1;
      grid-row: span 1;
    }
  }
</style>
