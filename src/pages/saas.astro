<style lang="scss">
  .saas-container {
    padding: 4rem 2rem;
    text-align: center;

    color: #e6f1ff;
  }

  .title {
    font-size: 3.5rem;
    background: linear-gradient(90deg, #1ecbe1, #8e44ad);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 1rem;
  }

  .intro {
    font-size: 1.25rem;
    color: #cfd8dc;
    max-width: 750px;
    margin: 0 auto 3rem auto;
    line-height: 1.7;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .product-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 1.5rem;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.5);
    text-decoration: none;
    color: #fff;

    h2 {
      font-size: 1.8rem;
      margin-bottom: 0.75rem;
    }

    &:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 25px rgba(0, 0, 0, 0.7);
      border-color: #1ecbe1;
    }
  }

  .career {
    background: linear-gradient(135deg, #0f2027, #2c5364);
  }
  .caption {
    background: linear-gradient(135deg, #42275a, #734b6d);
  }
  .crm {
    background: linear-gradient(135deg, #1d4350, #a43931);
  }

  /* Alternating Product Details */
  .product-details {
    background: #12121f;
    padding: 5rem 2rem;

    .detail-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 3rem;
      margin-bottom: 5rem;
      flex-wrap: wrap;
      @media screen and (max-width: 768px) {
        flex-direction: column;
        text-align: center;
      }

      &.reverse {
        flex-direction: row-reverse;
        @media screen and (max-width: 768px) {
          flex-direction: column;
        }
      }

      .detail-img {
        flex: 1;
        text-align: center;

        img {
          max-width: 100%;
          border-radius: 1rem;
          box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
          transition: transform 0.3s ease;

          &:hover {
            transform: scale(1.05);
          }
        }
      }

      .detail-content {
        flex: 1;

        h2 {
          font-size: 2rem;
          margin-bottom: 1rem;

          span {
            background: linear-gradient(90deg, #1ecbe1, #8e44ad);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
          }
        }

        p {
          font-size: 1.1rem;
          line-height: 1.7;
          color: #cfd8dc;
        }
      }
    }
  }

  .how-we-work {
    padding: 4rem 2rem;
    text-align: center;
    background: #232342;

    h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: #8e44ad;
    }

    p {
      max-width: 700px;
      margin: 0 auto 2rem;
      color: #cfd8dc;
    }

    .work-values {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;

      span {
        background: rgba(255, 255, 255, 0.08);
        color: #fff;
        padding: 0.8rem 1.2rem;
        border-radius: 2rem;
        font-size: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.15);
      }
    }
  }

  .process {
    padding: 4rem 2rem;

    text-align: center;

    h2 {
      font-size: 2.5rem;
      color: #fff;
      margin-bottom: 2rem;
    }

    .steps {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      text-align: left;

      .step {
        background: rgba(255, 255, 255, 0.05);
        padding: 1rem;
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.1);

        h3 {
          color: #f1f1f1;
          margin-bottom: 0.5rem;
        }

        p {
          color: #cfd8dc;
        }
      }
    }
  }

  .cta {
    padding: 4rem 2rem;
    text-align: center;
    background: linear-gradient(135deg, #1ecbe1, #8e44ad);
    color: #fff;
    border-radius: 10px;
    h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    p {
      font-size: 1.2rem;
      margin-bottom: 2rem;
    }

    .cta-btn {
      display: inline-block;
      padding: 1rem 2rem;
      background: #0f0f1a;
      color: #1ecbe1;
      border-radius: 2rem;
      text-decoration: none;
      font-size: 1.2rem;
      transition: all 0.3s ease;

      &:hover {
        background: #fff;
        color: #0f0f1a;
      }
    }
  }
</style>
