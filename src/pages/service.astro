---
// src/pages/services.astro
import Layout from "../layouts/Layout.astro";
import ProcessFlow from "../components/ProcessFlow.astro";
// For icons, a modern touch. Install with: npm install astro-icon
// Using Heroicons (outline) here. You can find more at https://heroicons.com/
import { Icon } from "astro-icon/components";

const services = [
  {
    title: "Web Development",
    description:
      "Custom web solutions tailored to your business needs with modern technologies and responsive design.",
    icon: "heroicons:code-bracket-solid",
  },
  {
    title: "Mobile App Development",
    description:
      "Native and cross-platform mobile applications for iOS and Android platforms.",
    icon: "heroicons:device-phone-mobile-solid",
  },
  {
    title: "UI/UX Design",
    description:
      "Beautiful and intuitive user interfaces that enhance user experience and engagement.",
    icon: "heroicons:paint-brush-solid",
  },
  {
    title: "Digital Marketing",
    description:
      "Comprehensive digital marketing strategies to grow your online presence.",
    icon: "heroicons:chart-bar-solid",
  },
  {
    title: "SEO Optimization",
    description:
      "Improve your search engine rankings and drive organic traffic to your website.",
    icon: "heroicons:magnifying-glass-solid",
  },
  {
    title: "Content Creation",
    description:
      "High-quality content that resonates with your audience and boosts conversions.",
    icon: "heroicons:pencil-solid",
  },
  {
    title: "Branding",
    description:
      "Create a strong brand identity that stands out in the competitive market.",
    icon: "heroicons:sparkles-solid",
  },
  {
    title: "Consulting",
    description:
      "Expert advice to help you make informed decisions about your digital strategy.",
    icon: "heroicons:chat-bubble-left-right-solid",
  },
  {
    title: "Support & Maintenance",
    description:
      "Ongoing support and maintenance to keep your digital products running smoothly.",
    icon: "heroicons:cog-solid",
  },
  {
    title: "eCommerce Solutions",
    description:
      "Powerful online stores with seamless checkout and payment integrations.",
    icon: "heroicons:shopping-cart-solid",
  },
  {
    title: "SaaS Development",
    description:
      "Scalable software-as-a-service solutions for your business needs.",
    icon: "heroicons:server-solid",
  },
  {
    title: "Cloud Architecture",
    description:
      "Design and deploy robust, scalable cloud infrastructure on AWS, Azure, or GCP.",
    icon: "heroicons:cloud-solid",
  },
];
---

<Layout title="Pyonet Services | Modern Digital Solutions">
  <main class="services-page">
    <div class="blur-bg blur-1"></div>
    <div class="blur-bg blur-2"></div>
    <div class="blur-bg blur-3"></div>

    <section class="services-hero">
      <div class="hero-content glass-card">
        <h1 class="hero-title">Our Services</h1>
        <p class="hero-subtitle">
          From concept to code, we build cutting-edge digital experiences that
          elevate your brand and drive results.
        </p>
        <a href="/contact" class="cta-button">Start Your Project</a>
      </div>
    </section>

    <section class="services-grid">
      {
        services.map((service) => (
          <div class="service-card glass-card">
            <div class="card-icon">
              <Icon name={service.icon} />
            </div>
            <h3 class="card-title">{service.title}</h3>
            <p class="card-description">{service.description}</p>
          </div>
        ))
      }
    </section>

    <section class="process-section">
      <ProcessFlow client:load />
    </section>

    <section class="final-cta">
      <div class="cta-content glass-card">
        <h2 class="cta-title">Have an idea?</h2>
        <p class="cta-subtitle">
          Let's turn it into reality. Get in touch with our experts today for a
          free consultation.
        </p>
        <a href="/contact" class="cta-button">Get a Free Quote</a>
      </div>
    </section>
  </main>
</Layout>

<style lang="scss">
  // --- Define Colors & Variables ---
  :root {
    --brand-purple: #5e17ed;
    --brand-red: #f06056;
    --brand-pink: #ea30d4;
    --brand-blue: #1683f8;

    --text-primary: #ffffff;
    --text-secondary: rgba(255, 255, 255, 0.7);

    --glass-bg: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
    --glass-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);

    --border-radius: 1.5rem; // 24px
    --border-radius-sm: 1rem; // 16px
  }

  // --- Reusable Glass Effect ---
  .glass-card {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border-radius: var(--border-radius);
    box-shadow: var(--glass-shadow);
    z-index: 10;
  }

  // --- Reusable CTA Button ---
  .cta-button {
    display: inline-block;
    padding: 0.8rem 2rem;
    background: linear-gradient(135deg, var(--brand-purple), var(--brand-red));
    color: var(--text-primary);
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    border: none;
    cursor: pointer;

    &:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25);
    }
  }

  // --- Base Page Layout ---
  .services-page {
    padding: 4rem 2rem;
    color: var(--text-primary);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    gap: 5rem;
    position: relative;
    overflow: hidden; // Contains blurs
  }

  // --- Decorative Blurs ---
  .blur-bg {
    position: absolute;
    width: 300px;
    height: 300px;
    filter: blur(200px);
    opacity: 0.7;
    z-index: 1;

    &.blur-1 {
      top: 5%;
      right: 5%;
      background-color: var(--brand-pink);
    }
    &.blur-2 {
      top: 30%;
      left: 0;
      background-color: var(--brand-blue);
    }
    &.blur-3 {
      bottom: 5%;
      right: 20%;
      background-color: var(--brand-purple);
    }
  }

  // --- Section Titles ---
  .section-title {
    font-size: clamp(2rem, 5vw, 2.75rem);
    text-align: center;
    margin-bottom: 2.5rem;
    font-weight: 700;
    z-index: 10;
  }

  // --- 1. Hero Section ---
  .services-hero {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 3rem 0;

    .hero-content {
      padding: 3rem 2.5rem;
      max-width: 800px;
    }

    .hero-title {
      font-size: clamp(2.5rem, 6vw, 4rem);
      font-weight: 800;
      margin-bottom: 1rem;
    }

    .hero-subtitle {
      font-size: clamp(1.1rem, 2vw, 1.25rem);
      color: var(--text-secondary);
      max-width: 600px;
      margin: 0 auto 2.5rem auto;
      line-height: 1.6;
    }
  }

  // --- 2. Services Grid ---
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    z-index: 10;
  }

  .service-card {
    padding: 2.5rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    transition:
      transform 0.3s ease,
      background 0.3s ease;
    position: relative; // For the gradient border

    // -- The Modern Gradient Border on Hover --
    &::before {
      content: "";
      position: absolute;
      inset: 0;
      border-radius: var(--border-radius);
      padding: 2px; // Border thickness
      background: linear-gradient(
        135deg,
        var(--brand-purple),
        var(--brand-red)
      );
      -webkit-mask:
        linear-gradient(#fff 0 0) content-box,
        linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      pointer-events: none;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    &:hover {
      transform: translateY(-5px);
      background: rgba(255, 255, 255, 0.08);

      &::before {
        opacity: 1;
      }

      .card-icon {
        transform: scale(1.1);
      }
    }

    .card-icon {
      width: 50px;
      height: 50px;
      display: grid;
      place-items: center;
      border-radius: var(--border-radius-sm);
      background: rgba(255, 255, 255, 0.1);
      color: var(--brand-red); // Icon color
      transition: transform 0.3s ease;

      // Styles the <Icon> component (astro-icon)
      :global(svg) {
        width: 28px;
        height: 28px;
      }
    }

    .card-title {
      font-size: 1.35rem;
      font-weight: 600;
      color: var(--text-primary);
    }

    .card-description {
      font-size: 1rem;
      color: var(--text-secondary);
      line-height: 1.6;
    }
  }

  // --- 3. Process Section ---
  .process-section {
    // The ProcessFlow component likely has its own styles
    // This section just provides a title and wrapper.
    z-index: 10;
  }

  // --- 4. Final CTA Section ---
  .final-cta {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 3rem 0;

    .cta-content {
      padding: 3rem 2.5rem;
      max-width: 800px;
    }

    .cta-title {
      font-size: clamp(2rem, 5vw, 2.75rem);
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .cta-subtitle {
      font-size: 1.15rem;
      color: var(--text-secondary);
      max-width: 550px;
      margin: 0 auto 2.5rem auto;
      line-height: 1.6;
    }
  }

  // --- Responsive Design ---
  @media (max-width: 768px) {
    .services-page {
      padding: 3rem 1rem;
      gap: 3rem;
    }

    .services-hero,
    .final-cta {
      padding: 1rem 0;
      .hero-content,
      .cta-content {
        padding: 2rem 1.5rem;
      }
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .service-card {
      padding: 2rem 1.5rem;
    }
  }
</style>
