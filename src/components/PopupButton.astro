---
// src/components/PopupButton.astro

const { title } = Astro.props;
---

<!-- Button to trigger the popup -->
<button class="btn" onclick="togglePopup()" title={title}>
    {title}
</button>

<!-- Popup div -->
<div id="popup" class="popup" style="display: none;">
    <div class="popup-content">
        <span class="close" onclick="togglePopup()">&times;</span>
        <p>This is the popup content!</p>
        <p>You can put any content here.</p>
    </div>
</div>

<script>
    function togglePopup() {
        const popup = document.getElementById('popup');
        // Toggle the display property of the popup
        popup.style.display = (popup.style.display === 'block') ? 'none' : 'block';
    }
</script>

<style>
    .btn {
        padding: 16px 20px;
        background-color: aqua;
        color: black;
        border: none;
        cursor: pointer;
    }

    .popup {
        position: fixed;
        z-index: 1000;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        width: 800px;
        height: 500px;
        background-color: white;
        border: 1px solid #ccc;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        display: none; /* Hidden by default */
    }

    .popup-content {
        padding: 20px;
    }

    .close {
        color: red;
        float: right;
        font-size: 24px;
        cursor: pointer;
    }

    /* Optional: Background overlay */
    body::after {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: none; /* Hidden by default */
        z-index: 999; /* Ensure it covers the whole screen */
    }

    .popup.open ~ body::after {
        display: block; /* Show overlay when popup is open */
    }
</style>
