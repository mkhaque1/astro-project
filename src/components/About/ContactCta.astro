---
import BlurEffect from '../BlurEffect.astro';
---

<section class="contact-cta">
  <BlurEffect />
  <div class="cta-box">
    <h2>Ready to work together?</h2>
    <p>
      Letâ€™s bring your next big idea to life. Reach out and start a conversation
      with us today.
    </p>

    <a class="cta-button" href="/contact">Get in touch</a>
  </div>
</section>

<style lang="scss">
  .cta-button {
    background-color: #ff944d;
  }
  .contact-cta {
    padding: 5rem 2rem;
    text-align: center;
    color: white;
    position: relative;
    .cta-box {
      position: relative;
      max-width: 700px;
      margin: auto;
      background: rgba(255, 255, 255, 0.05);
      padding: 3rem;
      border-radius: 1.5rem;
      border: 1px solid rgba(255, 255, 255, 0.1);
      transition: background 0.4s ease;
      &::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 1.5rem;
        padding: 2px;
        background: linear-gradient(135deg, #5e17ed, #f06056);
        -webkit-mask:
          linear-gradient(#fff 0 0) content-box,
          linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
      }
      &:hover {
        background: linear-gradient(
          145deg,
          rgba(255, 255, 255, 0.08),
          rgba(255, 255, 255, 0.12)
        );
      }

      h2 {
        font-size: 2rem;
        margin-bottom: 1rem;
      }

      p {
        font-size: 1.1rem;
        color: #ccc;
        margin-bottom: 2rem;
      }

      .cta-button {
        display: inline-block;
        padding: 0.75rem 2rem;
        background: linear-gradient(135deg, #ff4d4d, #ff944d);
        color: white;
        text-decoration: none;
        border-radius: 0.5rem;
        font-weight: bold;
        transition: background 0.3s ease;
      }
    }
  }
</style>
