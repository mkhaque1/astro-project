<div class="slider">
  <div class="slide-track">
    <div class="slide">
      {
        images.map((image) => (
          <a href="#">
            <img
              src={image.src}
              height={image.height}
              width={image.width}
              alt={image.alt}
            />
          </a>
        ))
      }
    </div>
  </div>
</div>

<style>
  .slider {
    background: rgba(162, 17, 176, 0.423);
    box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.125);
    height: 100px;
    margin: auto;
    overflow: hidden;
    position: relative;
  }

  .slider::before,
  .slider::after {
    background: linear-gradient(
      to right,
      rgb(28, 27, 27) 0%,
      rgba(255, 255, 255, 0) 100%
    );
    content: "";
    height: 100px;
    position: absolute;
    width: 200px;
    z-index: 2;
  }

  .slider::after {
    right: 0;
    top: 0;
    transform: rotateZ(180deg);
  }

  .slider::before {
    left: 0;
    top: 0;
  }

  .slider .slide-track {
    animation: scroll 40s linear infinite; /* Adjust duration as necessary */
    display: flex;
    /* width will be calculated based on content */
  }

  .slider .slide {
    height: 100px;
    display: flex; /* Ensure images align in a row */
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(
        calc(-250px * 7)
      ); /* Scroll through the 7 unique images */
    }
  }

  @media screen and (max-width: 430px) {
    .slider {
      width: 90vw;
    }
  }
</style>
