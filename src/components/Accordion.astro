---
const { items = [] } = Astro.props;
---

<section class="accordion-section">
  {
    items.map((item: { question: string; answer: string }, index: number) => (
      <details class="accordion-item">
        <summary class="accordion-question">{item.question}</summary>
        <div class="accordion-answer">
          <p>{item.answer}</p>
        </div>
      </details>
    ))
  }
</section>

<style>
  .accordion-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .accordion-item {
    background: rgba(30, 41, 59, 0.75);
    border-radius: 1rem;
    padding: 1rem 1.2rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.3s ease;
  }

  .accordion-item[open] {
    border-color: #60a5fa;
    background: rgba(30, 41, 59, 0.95);
  }

  .accordion-question {
    cursor: pointer;
    font-weight: 600;
    font-size: 1.1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    list-style: none;
  }

  .accordion-question::after {
    content: "â–¸";
    transition: transform 0.2s ease;
  }

  .accordion-item[open] .accordion-question::after {
    transform: rotate(90deg);
  }

  .accordion-answer {
    margin-top: 0.75rem;
    font-size: 1rem;
    line-height: 1.6;
    color: #cbd5e1;
  }

  @media (max-width: 600px) {
    .accordion-question {
      font-size: 1rem;
    }
    .accordion-answer {
      font-size: 0.95rem;
    }
  }
</style>
